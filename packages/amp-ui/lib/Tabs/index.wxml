<view class="a-tabs-container {{ ceiling ? 'a-tabs-container-fixed-top' : ''}}">
  <scroll-view scroll-x>
    <view class="a-tabs">
      <view
            wx:for="{{ tabList }}"
            wx:key="index"
            data-current="{{ index }}"
            class="a-tab {{ index === currentIndex ? 'a-tab-active' : '' }}"
            catch:tap="switchTab">
        <span>{{ item }}</span>
      </view>
    </view>
  </scroll-view>
</view>
<view class="{{ ceiling ? 'a-tabs-container-ceiling' : ''}}">
  <slot></slot>
</view>

