<view
      class="a-class a-notice-bar"
      bind:tap="handleTap">
  <view class="a-notice-bar-icon">
    <a-icon
            wx:if="{{ iconName }}"
            name="{{ iconName }}"
            color="{{ iconColor }}"
            size="{{ iconSize }}" />
    <image
           wx:if="{{ iconUrl && !iconName}}"
           src="{{ iconUrl }}"
           style="width: {{ iconSize }}rpx; height: {{ iconSize }}rpx;" />
  </view>
  <swiper
          wx:if="{{ roll && vertical }}"
          current="{{ current }}"
          autoplay
          vertical="{{ vertical }}"
          interval="{{ 300000 / speed }}"
          class="a-notice-bar-wrap"
          bind:change="handleChange">
    <block
           wx:for="{{ swiperArr }}"
           wx:key="index">
      <swiper-item>
        <view>{{ item }}</view>
      </swiper-item>
    </block>
  </swiper>
  <view
        wx:if="{{ roll && !vertical || !roll }}"
        class="a-notice-bar-wrap">
    <view
          class="a-notice-bar-content {{ !roll ? 'a-notice-bar-static' : '' }}"
          animation="{{ animationData }}">
      {{ text }}
      <slot wx:if="{{ !text }}"></slot>
    </view>
  </view>
  <view
        wx:if="{{ clearable }}"
        bind:tap="handleClear">
    <a-icon
            name="close"
            color="{{ iconColor }}"
            size="{{ 40 }}" />
  </view>
</view>

