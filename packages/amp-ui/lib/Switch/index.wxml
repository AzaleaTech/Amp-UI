<view
      class="a-class a-switch {{ checked ? 'a-switch-checked' : '' }} {{ disabled ? 'a-switch-disabled' : '' }}"
      style="{{ checked ? 'background:' + color + '; border-color:' + color : '' }}"
      bind:tap="handleSwitch">
  <view
        wx:if="{{ checked }}"
        class="a-switch-inner {{ checked ? 'a-switch-inner-checked' : '' }}"></view>
  <view
        wx:else
        class="a-switch-inner"></view>
</view>

