<view class="example-box">
  <view class="example-box-title">按钮形状</view>
  <view class="example-box-content">
    <a-button
              circle
              type="primary">圆角
    </a-button>
    <a-button
              circle="{{ false }}"
              type="primary">无圆角
    </a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">行内按钮</view>
  <view class="example-box-content">
    <a-button inline>按钮1</a-button>
    <a-button
              inline
              type="primary"
              a-class="btn">按钮2
    </a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">按钮尺寸</view>
  <view class="example-box-content">
    <a-button
              size="large"
              type="primary">大尺寸
    </a-button>
    <a-button
              size="default"
              type="primary">默认尺寸
    </a-button>
    <a-button
              size="small"
              type="primary">小尺寸
    </a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">按钮类型</view>
  <view class="example-box-content">
    <a-button type="default">default</a-button>
    <a-button type="primary">primary</a-button>
    <a-button type="success">success</a-button>
    <a-button type="warning">warning</a-button>
    <a-button type="error">error</a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">图标按钮，对应icon组件图标</view>
  <view class="example-box-content icons">
    <a-button
              type="icon"
              icon="praise_fill"
              iconColor="#cc003b"
              iconLabel="点赞"
              bind:tap="handleTapIcon"></a-button>
    <a-button
              type="icon"
              icon="star_line"
              iconColor="#0052cc"
              iconLabel="收藏"
              bind:tap="handleTapIcon"></a-button>
    <a-button
              type="icon"
              icon="share_line"
              iconColor="#009CA5"
              iconLabel="分享"
              bind:tap="handleTapIcon"></a-button>
    <a-button
              type="icon"
              icon="service_line"
              iconLabel="其他操作"
              bind:tap="handleTapIcon"></a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">按钮状态</view>
  <view class="example-box-content">
    <a-button
              disabled
              type="primary">禁用
    </a-button>
    <a-button
              loading
              type="primary">加载中
    </a-button>
  </view>
</view>
<view class="example-box">
  <view class="example-box-title">开放能力</view>
  <view class="example-box-content">
    <a-button
              open-type="contact"
              type="primary">contact
    </a-button>
    <a-button
              open-type="getUserInfo"
              type="primary"
              bind:getuserinfo="getUserInfo">getUserInfo
    </a-button>
    <a-button
              open-type="getPhoneNumber"
              type="primary"
              bind:getphonenumber="getPhoneNumber">getPhoneNumber
    </a-button>
    <a-button
              open-type="openSetting"
              type="primary">openSetting
    </a-button>
    <a-button
              open-type="launchApp"
              type="primary"
              bind:error="handleError">launchApp
    </a-button>
  </view>
</view>
<a-dialog dialogData="{{ dialogData }}">
  <image
         src="{{ userInfo.avatarUrl }}"
         class="avatar" />
  <view>{{ userInfo.nickName }}</view>
</a-dialog>

