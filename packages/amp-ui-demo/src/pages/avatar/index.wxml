<view class="example-box">
  <view class="example-box-title">头像形状</view>
  <view class="example-box-content">
    <a-avatar
              src="{{ imgUrl }}"
              name="姓名"
              desc="描述信息"
              bind:click="handleClick"></a-avatar>
    <a-avatar
              circle
              src="{{ imgUrl }}"
              name="姓名"
              desc="描述信息"
              bind:click="handleClick"></a-avatar>
  </view>
  <view class="example-box-title">头像边框</view>
  <view class="example-box-content">
    <a-avatar
              border
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
    <a-avatar
              circle
              border
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
    <a-avatar
              circle
              border
              border-color="#d54848"
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
  </view>
  <view class="example-box-title">头像大小</view>
  <view class="example-box-content">
    <a-avatar
              circle
              size="small"
              name="姓名"
              desc="小图"
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
    <a-avatar
              circle
              name="姓名"
              desc="默认大小"
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
    <a-avatar
              circle
              size="large"
              name="姓名"
              desc="大图"
              src="{{ imgUrl }}"
              bind:click="handleClick"></a-avatar>
  </view>
</view>

