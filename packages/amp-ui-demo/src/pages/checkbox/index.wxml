<view class="example-box">
  <view class="example-box-title">不同状态</view>
  <view class="example-box-content">
    <a-checkbox
                value="{{ value1 }}"
                checked="{{ checked1 }}"
                data-index="1"
                bind:change="handleChange"></a-checkbox>
    <a-checkbox
                value="{{ value2 }}"
                checked="{{ checked2 }}"
                data-index="2"
                disabled
                bind:change="handleChange"></a-checkbox>
  </view>
  <view class="example-box-title">不同类型</view>
  <view class="example-box-content">
    <a-checkbox
                value="{{ value1 }}"
                type="dot"
                checked="{{ checked1 }}"
                data-index="1"
                bind:change="handleChange"></a-checkbox>
    <a-checkbox
                value="{{ value2 }}"
                type="dot"
                checked="{{ checked2 }}"
                disabled
                data-index="2"
                bind:change="handleChange"></a-checkbox>
  </view>
  <view class="example-box-title">按钮位置</view>
  <view class="example-box-content">
    <a-checkbox
                value="{{ value1 }}"
                checked="{{ checked1 }}"
                data-index="1"
                position="right"
                bind:change="handleChange"></a-checkbox>
    <a-checkbox
                value="{{ value2 }}"
                checked="{{ checked2 }}"
                data-index="2"
                position="right"
                disabled
                bind:change="handleChange"></a-checkbox>
  </view>
  <view class="example-box-title">按钮颜色</view>
  <view class="example-box-content">
    <a-checkbox
                value="#3e04df"
                checked="{{ color1 }}"
                color="#3e04df"
                data-index="1"
                bind:change="handleColorChange"></a-checkbox>
    <a-checkbox
                value="#cf2828"
                checked="{{ color2 }}"
                color="#cf2828"
                data-index="2"
                bind:change="handleColorChange"></a-checkbox>
  </view>
  <view class="example-box-title">checkbox-group 排列方向</view>
  <view class="example-box-content">
    <a-checkbox-group
                      current="{{ current }}"
                      direction="horizontal"
                      bind:change="handleGroupChange">
      <a-checkbox value="{{ value1 }}"></a-checkbox>
      <a-checkbox value="{{ value2 }}"></a-checkbox>
      <a-checkbox value="{{ value3 }}"></a-checkbox>
    </a-checkbox-group>
  </view>
  <view class="example-box-title">checkbox-group 禁用</view>
  <view class="example-box-content">
    <a-checkbox-group
                      current="{{ current }}"
                      disabled>
      <a-checkbox value="{{ value1 }}"></a-checkbox>
      <a-checkbox value="{{ value2 }}"></a-checkbox>
      <a-checkbox value="{{ value3 }}"></a-checkbox>
    </a-checkbox-group>
  </view>
</view>

