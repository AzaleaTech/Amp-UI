<view class="example-box">
  <view class="example-box-title">基础用法</view>
  <view class="example-box-content">
    <a-image
             mode="aspectFill"
             src="{{ url }}" />
  </view>
  <view class="example-box-title">自定义预览</view>
  <view class="example-box-content">
    <a-image
             src="{{ url }}"
             mode="aspectFill"
             preview="{{ false }}"
             bind:click="handlePreviewImgs" />
  </view>
  <view class="example-box-title">加载失败显示图像占位符</view>
  <view class="example-box-content">
    <a-image src="xxx" />
  </view>
</view>

