<view class="a-upload-video">
  <view
        wx:for="{{ videos }}"
        wx:key="index"
        class="a-upload-video-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx">
    <image
           src="{{ item.poster  }}"
           data-index="{{ index }}"
           bind:tap="handlePreview" />
    <a-icon
            wx:if="{{ !disabled }}"
            name="error_fill"
            color="#929292"
            data-index="{{ index }}"
            class="a-upload-video-del"
            bind:tap="removeVideo"></a-icon>
  </view>
  <view
        wx:if="{{ (limit > imgList.length || limit === -1) && !disabled  }}"
        class="a-upload-video-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx"
        bind:tap="chooseVideo">
    <a-icon
            name="upload-video"
            size="80"
            color="#000"></a-icon>
    上传视频
  </view>
</view>

