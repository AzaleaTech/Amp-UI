.a-upload-video {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}
.a-upload-video-box {
  position: relative;
  margin: 30rpx 30rpx 0 0;
  border: 2rpx dotted #cecece;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #8c8c8c;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
}
.a-upload-video-box image {
  width: 100%;
  height: 100%;
}
.a-upload-video-del {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  padding: 12rpx;
  transform: translate(40%, -40%);
}
