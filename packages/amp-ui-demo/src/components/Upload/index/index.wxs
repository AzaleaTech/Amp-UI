// 获取后缀
function getSuffix(val) {
  return val.substr(val.lastIndexOf('.') + 1).toLocaleLowerCase();
}

// 判断是否图片类型
function isImage(val) {
  return ['jpg', 'png', 'svg', 'webp'].indexOf(getSuffix(val)) > -1;
}

// 判断是否图片类型
function isVideo(val) {
  return ['mp4', '3gp', 'm3u8'].indexOf(getSuffix(val)) > -1;
}

module.exports = {
  isImage: isImage,
  isVideo: isVideo,
};
