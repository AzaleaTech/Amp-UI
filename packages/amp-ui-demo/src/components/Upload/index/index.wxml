<view class="a-upload">
  <view
        wx:for="{{ mediaList }}"
        wx:key="index"
        class="a-upload-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx">
    <image
           src="{{ item.poster || item.url }}"
           data-index="{{ index }}"
           bind:tap="handlePreview" />
    <a-icon
            wx:if="{{ !disabled }}"
            name="error_fill"
            color="#929292"
            data-index="{{ index }}"
            class="a-upload-del"
            bind:tap="removeMedia"></a-icon>
  </view>
  <view
        wx:if="{{ (limit > mediaList.length || limit === -1) && !disabled }}"
        class="a-upload-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx"
        bind:tap="chooseMedia">
    <a-icon
            name="media_line"
            size="80"
            color="#000"></a-icon>
    上传图片/视频
  </view>
</view>

