.a-radio {
  display: flex;
  align-items: center;
  height: 80rpx;
}
.a-radio-circle {
  position: relative;
  border: 2rpx solid #cccccc;
  border-radius: 50%;
  width: 20px;
  height: 20px;
}
.a-radio-left {
  margin-right: 15px;
}
.a-radio-right {
  position: absolute;
  right: 15px;
}
.a-radio-checked {
  border-color: #009ca5;
}
.a-radio-dot-checked {
  position: absolute;
  top: 6px;
  left: 6px;
  border-radius: 50%;
  background-color: #009ca5;
  content: '';
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 8px;
  height: 8px;
}
.a-radio-disabled {
  opacity: 0.4;
}
.a-radio-title {
  display: inline-block;
}
