.a-card {
  position: relative;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #ffffff;
}
.a-card-header:not(:empty) {
  position: relative;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.a-card-img {
  margin-right: 30rpx;
  border: 1rpx solid #d8d8d8;
  border-radius: 12rpx;
  width: 204rpx;
  height: 204rpx;
}
.a-card-container {
  position: relative;
  width: calc(100% - 234rpx);
}
.a-card-title {
  margin-bottom: 28rpx;
  color: #525252;
  font-weight: 700;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.a-card-body {
  display: flex;
  padding-bottom: 30rpx;
}
.a-card-body-full {
  padding-bottom: 0;
}
.a-card-body-full .a-card-container {
  width: 100%;
}
.a-card-body-full .a-card-container .a-card-title {
  margin-bottom: 10rpx;
}
.a-card-body-full .a-card-container .a-card-contents {
  display: flex;
  flex-wrap: wrap;
  font-size: 22rpx;
}
.a-card-footer:not(:empty) {
  position: relative;
  box-sizing: border-box;
  padding-top: 30rpx;
  border-top: 2rpx solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.a-card-tag-left {
  position: absolute;
  top: 0;
  left: 0;
}
.a-card-tag-right {
  position: absolute;
  top: 0;
  right: 0;
}
