.a-divider {
  position: relative;
  width: 100%;
  color: #8c8c8c;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.a-divider-line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  border-bottom: 1rpx solid #cccccc;
}
.a-divider-content {
  position: relative;
  z-index: 1;
  display: inline-flex;
  align-items: center;
  padding: 0 10px;
  background: #ffffff;
}
