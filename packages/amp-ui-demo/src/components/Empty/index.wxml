<view class="a-class a-empty">
  <view class="a-empty-image">
    <a-image
             src="{{ url }}"
             width="{{ size }}"
             height="{{ size }}"
             fallback="{{ fallbackUrl }}" />
  </view>
  <view
        wx:if="{{ content }}"
        class="a-empty-content">{{ content }}
  </view>
  <view
        wx:if="{{ desc }}"
        class="a-empty-desc">{{ desc }}
  </view>
  <view class="a-empty-footer">
    <slot></slot>
  </view>
</view>

