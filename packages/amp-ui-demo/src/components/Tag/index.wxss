.a-tag {
  position: relative;
  display: inline-block;
  min-width: 40rpx;
  border-radius: 4rpx;
  text-align: center;
  padding: 0 8px;
  height: 19px;
  font-size: 12px;
  line-height: 19px;
}
.a-tag-small {
  padding: 0 8px;
  height: 16px;
  font-size: 11px;
  line-height: 16px;
}
.a-tag-large {
  padding: 0 10px;
  height: 22px;
  font-size: 13px;
  line-height: 22px;
}
.a-tag-default {
  border: 1rpx solid #cccccc;
  color: #ffffff;
  background-color: #cccccc;
  border: 2rpx solid #cccccc;
  color: #252525;
}
.a-tag-default-top-left::after {
  position: absolute;
  border: 4px solid transparent;
  content: '';
  top: -8px;
  left: 8%;
  border-bottom-color: #cccccc;
  border-left-color: #cccccc;
  transform: skewY(-16deg);
}
.a-tag-default-top-right::after {
  position: absolute;
  border: 4px solid transparent;
  content: '';
  top: -8px;
  right: 8%;
  border-bottom-color: #cccccc;
  border-right-color: #cccccc;
  transform: skewY(16deg);
}
.a-tag-default-bottom-left::after {
  position: absolute;
  border: 4px solid transparent;
  content: '';
  top: 100%;
  left: 8%;
  border-top-color: #cccccc;
  border-left-color: #cccccc;
  transform: skewY(16deg);
}
.a-tag-default-bottom-right::after {
