.a-tabs-container {
  position: relative;
  z-index: 1;
  display: inline-flex;
  width: 100%;
  background-color: #f5f5f5;
}
.a-tabs-container-fixed-top {
  position: sticky;
  top: 0;
  z-index: 10;
}
.a-tabs-container-ceiling {
  padding-top: 90rpx;
}
.a-tabs-container .modal {
  position: absolute;
  z-index: 9;
  content: '';
  width: 32px;
  height: 100%;
}
.a-tabs-container .modal-prev {
  left: 0;
  background: linear-gradient(to left, rgba(255, 255, 255, 0.3), #f5f5f5, #f5f5f5);
}
.a-tabs-container .modal-last {
  right: 0;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.3), #f5f5f5, #f5f5f5);
}
.a-tabs {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.a-tabs .a-tab {
  display: inline-flex;
  justify-content: center;
  flex: 1;
  padding: 24rpx 0;
  min-width: 150rpx;
  color: #8c8c8c;
  text-align: center;
  font-size: 15px;
  line-height: 42rpx;
  white-space: nowrap;
  word-wrap: normal;
}
.a-tabs .a-tab-active {
  position: relative;
  box-sizing: border-box;
  color: #009ca5;
  font-weight: bold;
  font-size: 18px;
}
.a-tabs .a-tab-active::before {
  position: absolute;
  top: 84rpx;
  width: 60rpx;
  border-bottom: 6rpx solid #009ca5;
  content: '';
}
