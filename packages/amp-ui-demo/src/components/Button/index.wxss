.a-btn {
  margin-bottom: 10px;
  border-radius: 2px;
  height: 36px;
  font-size: 16px;
  line-height: 36px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.a-btn-radius-large {
  border-radius: 45px;
}
.a-btn-radius-default {
  border-radius: 36px;
}
.a-btn-radius-small {
  border-radius: 27px;
}
.a-btn-size-large {
  height: 45px;
  font-size: 16px;
  line-height: 45px;
}
.a-btn-size-default {
  height: 36px;
  font-size: 16px;
  line-height: 36px;
}
.a-btn-size-small {
  height: 27px;
  font-size: 13px;
  line-height: 27px;
}
.a-btn-type-default {
  border: 2rpx solid #009ca5;
  background: #ffffff;
  color: #009ca5;
}
.a-btn-type-primary {
  background: #009ca5;
  color: #ffffff;
}
.a-btn-type-success {
  background: #19be6b;
  color: #ffffff;
}
.a-btn-type-warning {
  background: #ffb500;
  color: #ffffff;
}
.a-btn-type-error {
  background: #ed4114;
  color: #ffffff;
}
.a-btn-hover.btn-type-default {
  background: #009ca5;
  color: #ffffff;
}
.a-btn-hover::after {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.1);
  content: '';
}
.a-btn-disabled::before {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.35);
  content: '';
  width: 100%;
  height: 100%;
}
.a-btn-inline {
  display: inline-flex;
  margin: 10px;
}
.a-btn-child-normal {
  margin-right: 20rpx !important;
}
.a-btn-child-last {
  margin-right: 0;
}
.a-btn-child-left {
  margin-right: 0;
  width: 316rpx !important;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.a-btn-child-right {
  margin-left: 0;
  width: 316rpx !important;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
button::after {
  border: none;
}
