.a-swiper {
  position: relative;
  width: 100%;
  height: 180rpx;
}
.a-swiper swiper {
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
}
.a-swiper-slide-image {
  display: block;
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
}
.a-swiper-dots {
  position: absolute;
}
.a-swiper-dots-horizontal {
  right: 0;
  bottom: 8rpx;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.a-swiper-dots-vertical {
  top: 0;
  right: 8rpx;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.a-swiper-dot {
  border-radius: 8rpx;
  background: #d8d8d8;
  transition: all 0.6s;
}
.a-swiper-dot-active {
  background: #ffffff;
}
.a-swiper-dot-horizontal {
  margin: 0 8rpx;
  width: 24rpx;
  height: 4rpx;
}
.a-swiper-dot-vertical {
  margin: 8rpx 0;
  width: 4rpx;
  height: 24rpx;
}
.a-swiper-circle-dot-active {
  border: 4rpx solid #009ca5;
  border-top: none;
  border-radius: 0 0 50% 50%/0 0 100% 100%;
  width: 40rpx;
  height: 8rpx;
}
