.a-swiper {
  position: relative;
  width: 100%;
  height: 180rpx;
}
.a-swiper swiper {
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
}
.a-swiper-slide-image {
  display: block;
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
}
.a-swiper-dots {
  position: absolute;
}
.a-swiper-dots-horizontal {
  right: 0;
  bottom: 8rpx;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.a-swiper-dots-vertical {
  top: 0;
  right: 8rpx;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.a-swiper-dot {
  border-radius: 2rpx;
  background: #d8d8d8;
  transition: width 0.6s;
}
.a-swiper-dot-active {
  background: #ffffff;
}
.a-swiper-dot-horizontal {
  margin: 0 4rpx;
  width: 9rpx;
  height: 6rpx;
}
.a-swiper-dot-vertical {
  margin: 4rpx 0;
  width: 6rpx;
  height: 9rpx;
}
.a-swiper-dot-vertical.a-swiper-circle-dot-active {
  width: 6rpx;
  height: 18rpx;
}
.a-swiper-circle-dot-active {
  border-radius: 2rpx;
  background-color: #009ca5;
  width: 18rpx;
  height: 6rpx;
}
