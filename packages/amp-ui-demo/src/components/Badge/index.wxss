.a-badge {
  position: relative;
  display: flex;
  width: fit-content;
}
.a-badge-number {
  position: absolute;
  top: -12rpx;
  right: 0;
  z-index: 9;
  box-sizing: border-box;
  padding: 0 10rpx;
  height: 32rpx;
  border: 2rpx solid transparent;
  border-radius: 32rpx;
  background: #ed4114;
  color: #ffffff;
  font-size: 11px;
  transform: translateX(50%);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.a-badge-number-single {
  width: 32rpx;
  height: 32rpx;
}
.a-badge-dot {
  position: absolute;
  top: -10rpx;
  right: -20rpx;
  z-index: 9;
  border-radius: 100%;
  background: #ed4114;
  transform: translateX(-50%);
  width: 20rpx;
  height: 20rpx;
}
