.a-switch {
  position: relative;
  display: flex;
  align-items: center;
  border: 2rpx solid #cccccc;
  border-radius: 24px;
  background-color: #cccccc;
  transition: all 0.3s ease-in-out;
  width: 48px;
  height: 24px;
}
.a-switch-inner {
  position: absolute;
  left: 2rpx;
  border-radius: 100%;
  background-color: #ffffff;
  transition: left 0.3s ease-in-out;
  width: 20px;
  height: 20px;
}
.a-switch-inner-checked {
  left: 50rpx;
}
.a-switch-checked {
  border-color: #009ca5;
  background-color: #009ca5;
}
.a-switch-disabled {
  opacity: 0.4;
}
