.a-switch {
  position: relative;
  display: flex;
  align-items: center;
  border: 2rpx solid #cccccc;
  border-radius: 28px;
  background-color: #cccccc;
  transition: all 0.3s ease-in-out;
  width: 60px;
  height: 32px;
}
.a-switch-inner {
  position: absolute;
  left: 2rpx;
  border-radius: 100%;
  background-color: #ffffff;
  transition: left 0.3s ease-in-out;
  width: 28px;
  height: 28px;
}
.a-switch-inner-checked {
  right: 2rpx;
  left: initial;
}
.a-switch-checked {
  border-color: #009ca5;
  background-color: #009ca5;
}
.a-switch-disabled {
  opacity: 0.4;
}
