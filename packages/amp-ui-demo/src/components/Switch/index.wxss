.a-switch {
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 36rpx;
  background-color: #cccccc;
  transition: all 0.3s ease-in-out;
  width: 102rpx;
  height: 62rpx;
}
.a-switch-inner {
  position: absolute;
  left: 3rpx;
  border-radius: 100%;
  background-color: #ffffff;
  box-shadow: 0 3rpx 4rpx rgba(0, 0, 0, 0.3), 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.1);
  transition: left 0.3s ease-in-out;
  width: 56rpx;
  height: 56rpx;
}
.a-switch-inner-checked {
  right: 3rpx;
  left: initial;
}
.a-switch-checked {
  border-color: #009ca5;
  background-color: #009ca5;
}
.a-switch-disabled {
  opacity: 0.4;
}
