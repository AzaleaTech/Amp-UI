.a-notice-bar {
  overflow: hidden;
  height: 72rpx;
  background-color: #fefcec;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #3895f7;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.a-notice-bar-icon {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.a-notice-bar-icon image {
  margin: 0 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.a-notice-bar-wrap {
  position: relative;
  overflow: hidden;
  flex: 1;
  height: 100%;
  margin: 0 10rpx;
}
.a-notice-bar-content {
  position: absolute;
  transition-duration: 20s;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.a-notice-bar-static {
  max-width: 100%;
}
