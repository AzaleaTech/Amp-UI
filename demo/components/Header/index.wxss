.header-container {
  position: relative;
  overflow: hidden;
  width: 100%;
}
.title-bar {
  position: relative;
  font-weight: 700;
  line-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  color: #000000;
}
.header-fixed {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  overflow: hidden;
  width: 100%;
  background-color: #ffffff;
}
.status-bar {
  width: 750rpx;
}
.back-button {
  position: absolute;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx 20rpx 10rpx 0;
}
.back-button image {
  width: 48rpx;
  height: 48rpx;
}
.both {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 32rpx;
  border: 1rpx solid rgba(204, 204, 204, 0.6);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.both image {
  width: 48rpx;
  height: 48rpx;
  padding: 6rpx;
}
.both .line {
  font-size: 36rpx;
  font-weight: 100;
  color: rgba(204, 204, 204, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}
.title {
  width: 500rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
