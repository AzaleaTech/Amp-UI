<view class="a-class a-empty">
  <view class="a-empty-image">
    <a-image
             a-class="a-empty-image-content"
             width="100%"
             height="100%"
             src="{{ url }}"
             fallback="https://wpw-dt.oss-cn-hangzhou.aliyuncs.com/material/default/observer-default.png" />
  </view>
  <view class="a-empty-description">
    {{ desc }}
    <slot wx:if="{{ !desc }}"></slot>
  </view>
  <view class="a-empty-footer">
    <slot name="footer"></slot>
  </view>
</view>

