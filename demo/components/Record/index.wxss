.a-record {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.a-record-container {
  position: relative;
  overflow: hidden;
  width: 300rpx;
  height: 300rpx;
}
.a-record-container image {
  position: absolute;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 300rpx;
}
.a-record-box {
  overflow: hidden;
  background: transparent;
  width: 300rpx;
  height: 300rpx;
}
.a-record-main {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
}
.a-record-main a-icon {
  position: absolute;
}
.a-record-main a-icon:first-child {
  z-index: 3;
}
.a-record-main a-icon:nth-child(3) {
  z-index: 2;
  opacity: 40%;
}
.a-record-main a-icon:nth-child(4) {
  z-index: 1;
  opacity: 20%;
}
.a-record-tip {
  position: absolute;
  bottom: 0;
  width: 100%;
  color: #929292;
  text-align: center;
  font-size: 14px;
  line-height: 40rpx;
}
.a-record-btn {
  display: flex;
  align-items: center;
  margin: 60rpx 0 40rpx;
  height: 50rpx;
  color: #3895f7;
  font-size: 14px;
  line-height: 40rpx;
}
