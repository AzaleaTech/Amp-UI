.card {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #ffffff;
}
.card-header:not(:empty) {
  position: relative;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #84bff7;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.card-body {
  display: flex;
  padding-bottom: 30rpx;
}
.card-body .card-img {
  margin-right: 30rpx;
  border: 1rpx solid #e6e7e8;
  border-radius: 12rpx;
  width: 204rpx;
  height: 204rpx;
}
.card-body .card-container {
  position: relative;
  width: calc(100% - 234rpx);
}
.card-body .card-container .card-title {
  margin-bottom: 28rpx;
  color: #2f2f2f;
  font-weight: 700;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.card-body .card-container .card-contents {
  color: #868686;
  font-size: 26rpx;
}
.card-body-full {
  padding-bottom: 0;
}
.card-body-full .card-container {
  width: 100%;
}
.card-body-full .card-container .card-title {
  margin-bottom: 10rpx;
}
.card-body-full .card-container .card-contents {
  display: flex;
  flex-wrap: wrap;
  font-size: 22rpx;
}
.card-footer:not(:empty) {
  position: relative;
  box-sizing: border-box;
  padding-top: 30rpx;
  border-top: 2rpx solid #84bff7;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.card-tag-left:not(:empty) {
  position: absolute;
  top: 0;
  left: 0;
}
.card-tag-right:not(:empty) {
  position: absolute;
  top: 0;
  right: 0;
}
