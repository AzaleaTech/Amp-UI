<view
      class="a-player"
      catch:tap="tapPlayer">
  <a-icon
          name="a-01"
          color="{{ iconColor }}"
          size="{{ iconSize }}"></a-icon>
  <a-icon
          wx:if="{{ playIcon !== 0 }}"
          name="a-02"
          color="{{ iconColor }}"
          size="{{ iconSize }}"></a-icon>
  <a-icon
          wx:if="{{ playIcon === 2 }}"
          name="a-03"
          color="{{ iconColor }}"
          size="{{ iconSize }}"></a-icon>
  <view
        class="a-player-tip"
        style="color: {{ iconColor }}; margin-left: {{ iconSize + 10 }}rpx">
    {{ isPlaying ? '点击停止' : '点击播放' }}
  </view>
</view>

