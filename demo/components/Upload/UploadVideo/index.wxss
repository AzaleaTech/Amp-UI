.video {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}
.video-box {
  position: relative;
  margin: 30rpx 30rpx 0 0;
  border-radius: 8rpx;
  width: 140rpx;
  height: 140rpx;
}
.video-box video {
  width: 100%;
  height: 100%;
}
.video-box image:first-child {
  width: 100%;
  height: 100%;
}
.video-box cover-image {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  padding: 12rpx;
  transform: translate(40%, -40%);
  width: 36rpx;
  height: 36rpx;
}
