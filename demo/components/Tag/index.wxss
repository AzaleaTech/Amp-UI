.tag {
  display: inline-block;
  min-width: 40rpx;
  border: 2rpx solid #cccccc;
  border-radius: 4rpx;
  background-color: #cccccc;
  text-align: center;
  font-size: 22rpx;
  padding: 0 12rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.tag-small {
  padding: 0 8rpx;
  height: 30rpx;
  line-height: 30rpx;
}
.tag-large {
  padding: 0 14rpx;
  height: 42rpx;
  line-height: 42rpx;
}
.tag-primary {
  border: 1rpx solid #409eff;
  background-color: #409eff;
  color: #ffffff;
}
.tag-success {
  border: 1rpx solid #67c23a;
  background-color: #67c23a;
  color: #ffffff;
}
.tag-warning {
  border: 1rpx solid #e6a23c;
  background-color: #e6a23c;
  color: #ffffff;
}
.tag-error {
  border: 1rpx solid #f56c6c;
  background-color: #f56c6c;
  color: #ffffff;
}
.tag-circle {
  border-radius: 20rpx;
}
.tag-plain {
  background-color: #ffffff;
}
.tag-plain.tag-primary {
  border: 1rpx solid #409eff;
  background-color: #ffffff;
  color: #409eff;
}
.tag-plain.tag-success {
  border: 1rpx solid #67c23a;
  background-color: #ffffff;
  color: #67c23a;
}
.tag-plain.tag-warning {
  border: 1rpx solid #e6a23c;
  background-color: #ffffff;
  color: #e6a23c;
}
.tag-plain.tag-error {
  border: 1rpx solid #f56c6c;
  background-color: #ffffff;
  color: #f56c6c;
}
.tag-disabled {
  opacity: 0.4;
}
