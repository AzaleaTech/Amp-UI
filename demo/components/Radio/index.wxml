<view
      class="a-class radio"
      catch:tap="handleChange">
  <view
        class="radio-circle {{ checked ? 'radio-circle-checked' : '' }}  {{ disabled ? 'radio-circle-disabled': '' }} radio-circle-{{ position }} "
        style="{{ color ? 'border-color:' + color : '' }}">
    <view
          class="{{ checked ? 'radio-circle-dot-checked' : '' }}"
          style="{{ color ? 'background-color:' + color : '' }}"></view>
  </view>
  <view class="radio-title">{{ value }}</view>
</view>

