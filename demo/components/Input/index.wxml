<view class="custom-input">
  <input
         confirm-type="{{ confirmType }}"
         disabled="{{ disabled }}"
         focus="{{ focus }}"
         maxlength="{{ maxlength }}"
         placeholder="{{ placeholder }}"
         placeholder-style="{{placeholderStyle}}"
         password="{{ password }}"
         name="{{ name }}"
         style="{{ style }}"
         type="{{ type }}"
         value="{{ value }}"
         class="a-class"
         bind:blur="handleBlur"
         bind:focus="handleFocus"
         bind:input="handleChange" />
  <image
         wx:if="{{ allowClear && value }}"
         src="./images/clear-icon.png"
         bind:tap="handleChange" />
</view>

