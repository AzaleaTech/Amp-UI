.step {
  position: relative;
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
}
.step-head {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 48rpx;
}
.step-dot {
  position: relative;
  z-index: 2;
  margin: 0 auto;
  border: 2rpx solid #eeeeee;
  border-radius: 50%;
  background-color: #eeeeee;
  transition: all 0.6s ease-in-out;
  width: 20rpx;
  height: 20rpx;
}
.step-dot-active {
  border-color: #3895f7;
  background-color: #3895f7;
  width: 32rpx;
  height: 32rpx;
}
.step-line {
  position: absolute;
  top: 24rpx;
  left: 50%;
  background: #eeeeee;
  transition: all 0.4s ease-in-out;
  width: 100%;
  height: 4rpx;
}
.step-line-active {
  width: 50%;
  background: #3895f7;
}
.step-line-actived {
  width: 100%;
  background: #3895f7;
}
.step-body {
  margin-top: 20rpx;
  text-align: center;
}
.step-title {
  font-size: 24rpx;
  color: #525252;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.step-title-active {
  color: #3895f7;
}
.step-desc {
  margin-top: 6rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  color: #525252;
}
.step-vertical {
  width: 100% !important;
  height: 160rpx;
}
.step-vertical .step-head {
  float: left;
  width: 24px;
}
.step-vertical .step-body {
  margin-top: 0;
  margin-left: 40px;
  text-align: left;
}
.step-vertical .step-line {
  position: absolute;
  top: 18rpx;
  left: 22rpx;
  width: 4rpx;
  height: 100%;
}
.step-vertical .step-line-active {
  height: 50%;
  background-color: #3895f7;
}
.step-vertical .step-line-actived {
  height: 100%;
  background-color: #3895f7;
}
