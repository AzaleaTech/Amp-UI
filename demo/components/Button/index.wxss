.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: auto !important;
  margin-bottom: 12rpx;
  padding: 0;
  border-radius: 2rpx;
}
.btn-radius-large {
  border-radius: 50rpx;
}
.btn-radius-default {
  border-radius: 46rpx;
}
.btn-radius-small {
  border-radius: 40rpx;
}
.btn-size-large {
  padding: 0 32rpx;
  height: 96rpx !important;
  font-size: 32rpx;
  line-height: 44rpx;
}
.btn-size-default {
  padding: 0 16rpx;
  height: 88rpx !important;
  font-size: 30rpx;
  line-height: 40rpx;
}
.btn-size-small {
  font-size: 26rpx;
  line-height: 36rpx;
}
.btn-type-default {
  border: 2px solid #e9a32d;
  background-color: #ffffff;
  color: #e9a32d;
}
.btn-type-default-active {
  border: 0;
  background-color: #e48e00;
  color: #ffffff;
}
.btn-type-primary {
  background-color: #007bff;
  color: #ffffff;
}
.btn-type-success {
  background-color: #218838;
  color: #ffffff;
}
.btn-type-error {
  background-color: #dc3545;
  color: #ffffff;
}
.btn-type-warning {
  background-color: #ffc107;
  color: #ffffff;
}
.btn-hover::before {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.1);
  content: '';
  width: 100%;
  height: 100%;
}
.btn-disabled::before {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.35);
  content: '';
  width: 100%;
  height: 100%;
}
.btn-block {
  display: flex;
}
.child-normal {
  margin-right: 20rpx !important;
}
.child-last {
  margin-right: 0;
}
.child-left {
  width: 316rpx !important;
  margin-right: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.child-right {
  width: 316rpx !important;
  margin-left: 0;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
