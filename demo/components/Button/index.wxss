.btn {
  margin-bottom: 10px;
  border-radius: 2px;
  height: 44px;
  font-size: 16px;
  line-height: 44px;
}
.btn-radius-large {
  border-radius: 48px;
}
.btn-radius-default {
  border-radius: 44px;
}
.btn-radius-small {
  border-radius: 40px;
}
.btn-size-large {
  height: 48px;
  font-size: 18px;
  line-height: 48px;
}
.btn-size-default {
  height: 44px;
  font-size: 16px;
  line-height: 44px;
}
.btn-size-small {
  height: 40px;
  font-size: 14px;
  line-height: 40px;
}
.btn-type-default {
  border: 2rpx solid #3895f7;
  background: #ffffff;
  color: #3895f7;
}
.btn-type-primary {
  background: #3895f7;
  color: #ffffff;
}
.btn-type-success {
  background: #19be6b;
  color: #ffffff;
}
.btn-type-warning {
  background: #ffb500;
  color: #ffffff;
}
.btn-type-error {
  background: #ed4114;
  color: #ffffff;
}
.btn-hover.btn-type-default {
  background: #3895f7;
  color: #ffffff;
}
.btn-hover::after {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.1);
  content: '';
}
.btn-disabled::before {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.35);
  content: '';
  width: 100%;
  height: 100%;
}
.btn-inline {
  display: inline-flex;
  margin: 10px;
}
.child-normal {
  margin-right: 20rpx !important;
}
.child-last {
  margin-right: 0;
}
.child-left {
  margin-right: 0;
  width: 316rpx !important;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.child-right {
  margin-left: 0;
  width: 316rpx !important;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
