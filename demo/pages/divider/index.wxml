<view class="example-box">
  <view class="example-box-title">一般用法</view>
  <view class="example-box-content">
    <a-divider></a-divider>
    <a-divider content="分割线"></a-divider>
    <a-divider
               content="虚线"
               dashed></a-divider>
  </view>
  <view class="example-box-title">字体大小</view>
  <view class="example-box-content">
    <a-divider
               content="分割线"
               size="{{ 28 }}"></a-divider>
    <a-divider
               content="分割线"
               size="{{ 36 }}"></a-divider>
  </view>
  <view class="example-box-title">字体颜色</view>
  <view class="example-box-content">
    <a-divider
               content="分割线"
               color="#1f47d7"></a-divider>
    <a-divider
               content="分割线"
               color="#ff4949"></a-divider>
  </view>
  <view class="example-box-title">线条颜色</view>
  <view class="example-box-content">
    <a-divider line-color="#1f47d7"></a-divider>
    <a-divider line-color="#ff4949"></a-divider>
  </view>
  <view class="example-box-title">slot插槽</view>
  <view class="example-box-content">
    <a-divider>自定义内容</a-divider>
    <a-divider>
      <a-icon name="succeed_line" />
      icon
    </a-divider>
  </view>
</view>

