<view class="example-box">
  <view class="example-box-title">不同颜色</view>
  <view class="example-box-content">
    <view class="switch-box">
      <a-switch
                checked="{{ checked1 }}"
                data-index="1"
                bind:change="handleChange"></a-switch>
    </view>
    <view class="switch-box">
      <a-switch
                checked="{{ checked2 }}"
                color="#f42dee"
                data-index="2"
                bind:change="handleChange"></a-switch>
    </view>
    <view class="switch-box">
      <a-switch
                checked="{{ checked3 }}"
                color="#2f445d"
                data-index="3"
                bind:change="handleChange"></a-switch>
    </view>
  </view>
  <view class="example-box-title">禁用状态</view>
  <view class="example-box-content">
    <view class="switch-box">
      <a-switch
                checked="{{ checked4 }}"
                disabled></a-switch>
    </view>
    <view class="switch-box">
      <a-switch
                checked="{{ !checked4 }}"
                disabled></a-switch>
    </view>
  </view>
</view>

