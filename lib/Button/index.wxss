.icon-btn {
  height: 90rpx;
  color: #868686;
  text-align: center;
  font-size: 22rpx;
  line-height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-btn-content {
  white-space: nowrap;
  word-wrap: normal;
}
.icon-btn .icon {
  width: 42rpx;
  height: 42rpx;
}
.btn {
  position: relative;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-normal {
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  line-height: 44rpx;
}
.btn-normal .icon {
  margin-right: 10rpx;
  width: 32rpx;
  height: 32rpx;
}
.btn-small {
  height: 72rpx;
  border-radius: 46rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}
.btn-small .icon {
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.btn-mini {
  padding: 10rpx 20rpx;
  height: 56rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}
.btn-mini .icon {
  margin-right: 10rpx;
  width: 26rpx;
  height: 26rpx;
}
.btn-default {
  border: 2px solid #e9a32d;
  background-color: #ffffff;
  color: #e9a32d;
}
.btn-default-active {
  border: 0;
  background-color: #e48e00;
  color: #ffffff;
}
.btn-primary {
  background-color: #e9a32d;
  color: #ffffff;
}
.child-first .btn,
.child-first .btn-mask {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.child-middle .btn,
.child-middle .btn-mask {
  border-radius: 0;
}
.child-last .btn,
.child-last .btn-mask {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
.btn-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.btn-mask-normal {
  border-radius: 50rpx;
}
.btn-mask-small {
  border-radius: 46rpx;
}
.btn-mask-mini {
  border-radius: 40rpx;
}
.btn-mask-active {
  background-color: rgba(0, 0, 0, 0.1);
}
.btn-mask-disabled {
  background-color: rgba(255, 255, 255, 0.35);
}
