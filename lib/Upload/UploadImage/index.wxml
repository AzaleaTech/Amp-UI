<view class="img">
  <view
        wx:for="{{ imgList }}"
        wx:key="id"
        class="img-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx">
    <image
           src="{{ item }}"
           data-index="{{ index }}"
           bind:tap="previewImage" />
    <image
           hidden="{{ disabled }}"
           src="../images/remove.png"
           data-index="{{ index }}"
           class="del-img"
           bind:tap="removeImage" />
  </view>
  <view
        wx:if="{{ (limit > imgList.length || !limit) && !disabled }}"
        class="img-box"
        style="width: {{ width }}rpx; height: {{ height }}rpx"
        bind:tap="chooseImage">
    <a-icon
            name="photograph_line"
            size="80"
            color="#929292"></a-icon>
    上传图片
  </view>
</view>
<view wx:if="{{ showCropper }}">
  <a-cropper
             imgUrl="{{ imgUrl }}"
             ratio="{{ 690 / 400 }}"
             bind:cancel="handleCancel"
             bind:save="handleSave"></a-cropper>
</view>

