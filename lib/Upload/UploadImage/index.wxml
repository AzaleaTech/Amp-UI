<view class="img">
  <view
        wx:for="{{ imgs }}"
        wx:key="id"
        class="img-box"
        style="width: {{ size }}rpx; height: {{ size }}rpx">
    <image
           src="{{ item }}"
           data-index="{{ index }}"
           bind:tap="previewImage" />
    <image
           hidden="{{ disabled }}"
           src="../images/remove.png"
           data-index="{{ index }}"
           class="del-img"
           bind:tap="removeImage" />
  </view>
  <view
        wx:if="{{ (limit > imgs.length || !limit) && !disabled }}"
        class="img-box"
        style="width: {{ size }}rpx; height: {{ size }}rpx"
        bind:tap="chooseImage">
    <image src="../images/default-image.png" />
  </view>
</view>
<view wx:if="{{ showCropper }}">
  <cropper
           cutScale="{{ 690 / 400 }}"
           imgUrl="{{ imgUrl }}"
           type="uploadImage"
           bind:cancel="handleCancel"
           bind:save="handleSave" />
</view>

