.img {
  width: 100%;
  flex-direction: row;
  display: flex;
  flex-wrap: wrap;
}
.img-box {
  position: relative;
  border-radius: 8rpx;
  margin: 30rpx 30rpx 0 0;
  width: 140rpx;
  height: 140rpx;
}
.img-box image:first-child {
  width: 100%;
  height: 100%;
}
.img-box .del-img {
  position: absolute;
  top: 0;
  right: 0;
  transform: translate(40%, -40%);
  width: 36rpx;
  height: 36rpx;
}
