<a-modal
         wx:if="{{ show }}"
         catch:tap="closeDialog">
  <view class="dialog-body">
    <view
          wx:if="{{ dialogData.title }}"
          class="dialog-title">{{ dialogData.title }}
    </view>
    <view class="dialog-content">
      <block wx:if="{{ dialogData.content }}">{{ dialogData.content }}</block>
      <block wx:else>
        <slot></slot>
      </block>
    </view>
    <view class="dialog-btn">
      <a-button
                wx:if="{{ dialogData.cancelText }}"
                inline
                catch:click="cancel">
        <text>{{ dialogData.cancelText }}</text>
      </a-button>
      <a-button
                wx:if="{{ dialogData.confirmText }}"
                type="primary"
                inline
                catch:click="confirm">
        {{ dialogData.confirmText || 'чбошод' }}
      </a-button>
    </view>
  </view>
</a-modal>

