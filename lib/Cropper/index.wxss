.cropper-box {
  padding: 80rpx 30rpx 0 30rpx;
}
.cropper-box ::-webkit-scrollbar {
  display: none;
}
.show {
  position: relative;
  overflow: hidden;
}
.img {
  overflow: scroll;
}
canvas {
  position: fixed;
  top: -9999rpx;
  left: 0;
}
.bottom {
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  padding: 0 60rpx;
  bottom: 84rpx;
}
.bottom a-button {
  display: block;
}
.bottom a-button:not(:first-child) {
  padding-top: 32rpx;
}
