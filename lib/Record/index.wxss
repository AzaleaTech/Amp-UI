.record {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.record-container image {
  position: absolute;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 300rpx;
}

.record-container {
  position: relative;
  overflow: hidden;
  width: 300rpx;
  height: 300rpx;

}

.record-box {
  overflow: hidden;
  width: 300rpx;
  height: 300rpx;
  background: transparent;
}

.record-main {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  overflow: hidden;
  width: 300rpx;
  height: 300rpx;
}

.record-main image:first-child {
  z-index: 3;
}

.record-main image:nth-child(2) {
  z-index: 2;
}

.record-main image:nth-child(3) {
  z-index: 1;
}

.tips {
  position: absolute;
  bottom: 0;
  width: 100%;
  color: rgba(146, 146, 146, 1);
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
}

.tips-more {
  position: absolute;
  bottom: 20rpx;
  left: 50rpx;
  width: 204rpx;
  height: 48rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  font-weight: 700;
  font-size: 34rpx;
  line-height: 48rpx;
}

.del-btn image {
  margin-right: 12rpx;
  width: 38rpx;
  height: 36rpx;
}

.del-btn {
  margin: 60rpx 0 40rpx;
  height: 50rpx;
  color: rgba(249, 176, 0, 1);
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
}