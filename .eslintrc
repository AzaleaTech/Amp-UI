{
  "extends": ["prettier", "airbnb-base", "plugin:prettier/recommended"],

  // 插件
  "plugins": ["prettier"],

  // 配置解析器
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },

  "env": {
    // 脚本目标的运行环境
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },

  // 全局变量
  "globals": {
    "__DEV__": true,
    "__WECHAT__": true,
    "__ALIPAY__": true,
    "App": true,
    "Page": true,
    "Component": true,
    "Behavior": true,
    "wx": true,
    "getApp": true
  },

  // 规则，只用插件：插件名/规则
  "rules": {
    "prettier/prettier": "error",
    "no-console": 2,
    "operator-linebreak": ["error", "after", { "overrides": { "?": "ignore", ":": "ignore" } }],
    // 使用 ===
    "eqeqeq": 2,
    // 换行使用LF
    "linebreak-style": ["error", "unix"],
    "no-param-reassign": ["error", { "props": false }],
    // 关闭for of/ for in 禁用规则
    "no-restricted-syntax": 0
  }
}
